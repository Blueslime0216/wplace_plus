{
  "manifest_version": 3,
  "name": "Wplace Plus",
  "version": "1.0.0",
  "description": "wplace.live를 위한 고급 오버레이 및 픽셀 관리 도구",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://wplace.live/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://wplace.live/*"],
      "js": [
        "js/features/language-changer.js",
        "js/utils/helpers.js",
        "js/utils/color-palette.js",
        "js/core/storage-manager.js",
        "js/core/project-instance.js",
        "js/features/image-upload.js",
        "js/core/project-manager.js",
        "js/features/position-capture.js",
        "js/features/overlay-manager.js",
        "js/features/projects.js",
        "js/features/version-display.js",
        "js/features/project-settings-modal.js",
        "js/features/project-dropdown.js",
        "js/features/project-share.js",
        "js/features/menu-manager.js",
        "js/features/modal-restore.js",
        "js/features/modal-stack-manager.js",
        "js/core/core.js"
      ],
      "css": [
        "css/base/variables.css",
        "css/base/modal.css",
        "css/layout/header.css",
        "css/layout/content.css",
        "css/components/controls.css",
        "css/components/sections.css",
        "css/components/resize.css",
        "css/components/image-upload.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "js/features/injector.js",
        "js/features/fetch-hook.js"
      ],
      "matches": ["https://wplace.live/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Wplace Plus"
  }
}

